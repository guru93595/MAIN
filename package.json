{
    "name": "evara-monorepo",
    "private": true,
    "scripts": {
        "install:client": "cd client && npm install",
        "install:server": "cd server && pip install -r requirements.txt",
        "setup": "npm run install:client && npm run install:server",
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd server && uvicorn main:app --reload --port 8000",
        "start": "concurrently \"npm run dev:server\" \"npm run dev:client\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}